{
  "name": "htmlmodule",
  "version": "0.6.2",
  "description": "HTML DOM assembler library",
  "homepage": "https://aristov.github.io/htmlmodule",
  "bugs": "https://github.com/aristov/htmlmodule/issues",
  "license": "MIT",
  "author": "Vyacheslav Aristov <vv.aristov@gmail.ru>",
  "files": [
    "lib"
  ],
  "main": "lib",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristov/htmlmodule.git"
  },
  "scripts": {
    "lint": "eslint lib --ignore-pattern *.spec.js --quiet && eslint lib/*.spec.js --env browser,mocha && eslint shim docs",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "mocha": "mocha",
    "build": "NODE_ENV=production webpack",
    "watch": "webpack -w",
    "serve": "webpack serve",
    "publish": "git push && git push --tags",
    "api": "rm -rf dist/api && npm run jsdoc",
    "jsdoc": "jsdoc lib/* -d dist/api/jsdoc --verbose"
  },
  "dependencies": {
    "window": "github:aristov/window"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "jsdoc": "^3.6.10",
    "jsdom": "^19.0.0",
    "morphdom": "^2.6.1",
    "nyc": "^15.1.0",
    "sinon": "^13.0.2",
    "style-loader": "^3.3.1",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "report-dir": "dist/coverage/jsdom"
  },
  "keywords": [
    "DOM",
    "HTML"
  ]
}
