{
  "name": "htmlmodule",
  "version": "0.11.0",
  "description": "Library for creating UI",
  "homepage": "https://aristov.github.io/htmlmodule#readme",
  "author": "Vyacheslav Aristov <vv.aristov@gmail.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristov/htmlmodule.git"
  },
  "bugs": "https://github.com/aristov/htmlmodule/issues",
  "main": "index.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:dev": "webpack",
    "build:prod": "NODE_ENV=production FILE_EXT=.min.js webpack",
    "build:es5": "NODE_ENV=production FILE_EXT=.es5.js webpack",
    "coverage": "nyc --reporter=lcov npm test",
    "publish": "git push && git push --tags",
    "start": "ava --watch",
    "test": "ava"
  },
  "dependencies": {
    "xwindow": "^0.1.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "ava": "^4.3.3",
    "babel-loader": "^8.2.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "nyc": {
    "exclude": [
      "dist/**",
      "test/**"
    ]
  },
  "keywords": [
    "DOM",
    "HTML",
    "UI",
    "component",
    "library",
    "virtual dom"
  ],
  "engines": {
    "node": ">=14.19"
  }
}
