{
  "name": "htmlmodule",
  "version": "0.4.1",
  "description": "DOM assembler",
  "keywords": [
    "html",
    "html5",
    "javascript",
    "module",
    "library",
    "dom",
    "node",
    "element",
    "htmlelement",
    "htmldom",
    "htmldomassembler"
  ],
  "homepage": "https://aristov.github.io/htmlmodule",
  "bugs": "https://github.com/aristov/htmlmodule/issues",
  "license": "MIT",
  "author": "Vyacheslav Aristov <vv.aristov@gmail.ru> (http://twitter.com/aristov7)",
  "files": [
    "lib/",
    "shim/"
  ],
  "main": "./lib",
  "directories": {
    "dist": "./dist",
    "lib": "./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristov/htmlmodule.git"
  },
  "scripts": {
    "lint": "eslint lib --ignore-pattern *.spec.js --quiet && eslint lib/*.spec.js --env browser,mocha && eslint shim docs",
    "dist": "webpack && MIN=true webpack",
    "spec": "ENTRY=spec webpack",
    "cov": "COV=true ENTRY=spec webpack",
    "index": "ENTRY=index webpack",
    "api": "esdoc -c esdoc.json",
    "docs": "npm run cov && npm run index && npm run api",
    "karma": "karma start",
    "karma-local": "LOCAL=true karma start",
    "pretest": "npm run dist && npm run docs",
    "test": "npm run karma",
    "posttest": "cat ./dist/coverage/chrome/lcov.info | coveralls",
    "test-local": "npm run pretest && npm run karma-local",
    "start": "webpack && ENTRY=index ES6=true WATCH=true webpack",
    "static": "http-server .. -c-1",
    "build": "npm run dist && npm run spec && npm run index && npm run api",
    "gh-pages": "git branch -D gh-pages && git checkout -b gh-pages && npm run build && git add index.html dist -f && git commit -am 'add dist' && git push --set-upstream origin gh-pages -f && git checkout master && git status"
  },
  "precommit": [
    "lint"
  ],
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel": "^6.5.2",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "codemirror": "^5.20.2",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^2.11.14",
    "css-loader": "^0.26.0",
    "dom4": "^1.8.3",
    "esdoc": "^0.4.8",
    "esdoc-importpath-plugin": "0.1.0",
    "eslint": "^3.10.1",
    "http-server": "^0.9.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-opera-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sinon": "^1.0.5",
    "mocha": "^3.1.2",
    "postcss-loader": "^1.1.1",
    "pre-commit": "^1.1.3",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3",
    "whatwg-fetch": "^2.0.0"
  },
  "engines": {
    "node": ">=0.6"
  }
}
